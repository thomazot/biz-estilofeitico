.newsletter
    @extend $container
    border: solid 1px #cacaca
    background: rgba(255, 255, 255, 0.5)
    padding: 20px
    text-align: center

    &:before
        content: ''
        display: block
        background: url(logo) no-repeat center center
        height: 77px
        margin-bottom: 20px

    &__form
        max-width: 925px
        margin: 0 auto

        .input-text
            height: 35px
            box-shadow: none
            border: 0
            border-bottom: solid 1px #acacac
            border-radius: 0
            background: none
            padding-left: 0

            &::placeholder
                font-size: 12px
                font-weight: medium

            &:focus::placeholder
                color: transparent

    &__btn
        border-radius: 0
        height: 35px
        padding: 0
        font-size: 12px
        font-weight: bold

    &__text
        h3
            font-size: 18px
            font-weight: bold
            color: color1_bg
            margin-bottom: 8px

        p
            font-size: 16px
            font-weight: regular
            color: color1_bg

@media (min-width: 993px)
    .newsletter
        &__email
            flex: 1 1 25%
            padding-right: 0
            padding-left: 15px

        &__submit
            padding-left: 0
            flex: 0 0 135px