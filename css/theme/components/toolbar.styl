.toolbar
    .amount, .limiter, &-bottom
        display: none

    .view-mode
        order: -1
        flex: 1
        min-width: 0

        &:before
            content: 'Visualização'
            font-size: 12px
            font-weight: bold
            margin-right: 5px
            margin-top: -2px

        svg
            width: 14px
            height: 14px

    .sort-by
        position: relative
        background: #fff
        margin-left: 5px
        border-radius: 0
        border-bottom: solid 1px #f2f2f2

        &:after
            content: ''
            position: absolute
            top: 0
            right: 0
            width: 40px
            height: 100%
            background: url(down) no-repeat right center
            background-size: 9px 9px

        label
            display: none

        select
            appearance: none
            box-shadow: none
            width: 100%
            height: 35px
            border: 0
            padding: 0 40px 0 15px
            background: none
            font-size: 12px
            color: #7f7f7f

    .sorter
        display: flex
        margin-left: 0
        width: 100%
        justify-content: space-between

        &:before
            content: 'Ordenar'
            font-size: 12px
            font-weight: semibold
            color: #2c2829
            min-width: 60px

@media (min-width: 993px)
    .toolbar
        justify-content: flex-end
        height: 35px
        margin-bottom: 15px
        margin-top: -50px
        margin-left: 160px